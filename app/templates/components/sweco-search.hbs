<div id="search" class="search" style="display: none;">
  <div class="input-group">
    {{input
      id='searchInput'
      name='searchInput'
      type='search'
      class=customClass
      value=value
      enter='search'
      autocomplete='false'
      tabindex='1'
      placeholder='The placeholder for search'
    }}
    <span class="input-group-btn">
      <button class="btn btn-search" type="button" tabindex="2" {{action 'search'}}><i class="fa fa-search" aria-hidden="true"></i></button>
    </span>
  </div>
  <!-- RESET START -->
  {{#if value}}
  	<button type="button" class="close btn-search-reset" aria-hidden="true" {{action 'clear'}}><i class="fa fa-times-circle"></i></button>
  {{/if}}
  <!-- RESET STOP -->
</div>